<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/_10sdp"
    android:orientation="vertical">

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter code sent to your number"
        android:textColor="@color/black"
        android:textSize="@dimen/_16ssp"
        android:textStyle="bold" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We sent it to +99123456789"
        android:textColor="@color/black"
        android:textSize="@dimen/_12ssp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp">

        <com.mukesh.OtpView
            android:id="@+id/otp_view"
            android:focusableInTouchMode="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="0"
            android:enabled="true"
            android:inputType="number"
            android:textColorHint="@color/black"
            app:OtpItemCount="4"
            app:OtpLineColor="#707070"
            app:OtpViewType="line" />

    </LinearLayout>

    <TextView
        android:id="@+id/otp_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_10sdp"
        android:text="Didnt receive OTP? Resend in 24 sec" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/otp_continue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Continue"
        android:enabled="false"
        android:textColor="@color/white"
        app:iconTint="@color/white"
        android:backgroundTint="@color/colors4"
        app:icon="@drawable/ic_forward"
        app:iconGravity="textEnd"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/gotoEmail"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="Proceed with email"
        android:textColor="@color/black" />

</LinearLayout>